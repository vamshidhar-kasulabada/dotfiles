# Changing window focus

# Changing Focus within a space

ctrl + cmd - j : yabai -m window --focus south
ctrl + cmd - k : yabai -m window --focus north
ctrl + cmd - l : yabai -m window --focus east
ctrl + cmd - h : yabai -m window --focus west
ctrl + cmd - o : yabai -m window --focus stack.next
ctrl + cmd - p : yabai -m window --focus stack.prev

ctrl + cmd - f : yabai -m window --toggle zoom-fullscreen

ctrl + cmd - m : yabai -m window --space next
ctrl + cmd - n : yabai -m window --space prev

ctrl + cmd - down : yabai -m window --swap south
ctrl + cmd - up : yabai -m window --swap north
ctrl + cmd - right : yabai -m window --swap east
ctrl + cmd - left : yabai -m window --swap west
